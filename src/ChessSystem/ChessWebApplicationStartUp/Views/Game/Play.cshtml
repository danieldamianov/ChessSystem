@using ChessWebApplicationStartUp.Components
@using ChessGameLogic.Enums
@using ChessWebApplication.Controllers.Game.InputModels

@model PlayInputModel

@{ ChessColors chessColor = Model.PlayerColor == "black" ? ChessColors.Black : ChessColors.White; }

<component type="typeof(ChessBoardComponent)" render-mode="ServerPrerendered" param-chessColor="@chessColor" param-IsOnTurn="@chessColor == ChessColors.White" />

@section Scripts{

    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/js/game.js"></script>
}
